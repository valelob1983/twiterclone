<div class="container">
<h1 class="my-4">Tweets</h1>

<div id="tweets" class="list-group">
  <% @tweets.each do |tweet| %>
    <div class="list-group-item d-flex justify-content-between align-items-center">
      <!-- Contenido del tweet -->
      <%= render tweet %>

      <!-- Botón de "Mostrar tweet" al costado derecho con ícono -->
      <p class="mb-0">
        <%= link_to tweet, class: "btn btn-primary btn-sm d-inline-flex align-items-center" do %>
          <i class="fas fa-eye mr-2"></i> <!-- Ícono de "ver" -->
      <% end %>
      </p>
    </div>
  <% end %>
</div>
</div>

  <div class="my-4">
    <%= link_to "Nuevo tweets", new_tweet_path, class: "btn btn-success" %>
  </div>

  <%= form_with url: tweets_path, method: :get, class: "form-inline d-inline-flex" do |form| %>
    <div class="form-group mx-sm-3">
      <%= form.text_field :query_text, placeholder: 'Búsqueda de otro tweet', value: params[:query_text], class: "form-control" %>
    </div>
    <%= button_tag(type: 'submit', class: "btn btn-outline-primary") do %>
      <i class="fa-solid fa-magnifying-glass"></i> <!-- Ícono de lupa -->
      Buscar
    <% end %>
  <% end %>

  <div class="pagination-container my-4">
  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
      <%= raw pagy_bootstrap_nav(@pagy) %>
    </ul>
  </nav>
</div>
