<% if notice %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% end %>

<div class="card mb-4">
  <div class="card-body">
    <%= render @tweet %>
  </div>
</div>

<div class="d-flex justify-content-between">
  <div>
    <%= link_to "Editar tweet", edit_tweet_path(@tweet), class: "btn btn-primary" %>
    <%= link_to "Volver a tweets", tweets_path, class: "btn btn-secondary" %>
  </div>

  <%= button_to "Eliminar tweet", @tweet, method: :delete, class: "btn btn-danger", data: { confirm: "Estas Seguro?" } %>
</div>

